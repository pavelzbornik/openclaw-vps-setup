[global]
   workgroup = WORKGROUP
   server string = OpenClaw File Drop
   server role = standalone server
   log file = /var/log/samba/log.%m
   max log size = 50
   dns proxy = no
   hosts allow = 127.0.0.1 {{ openclaw_lan_subnet }}
   hosts deny = ALL

[{{ openclaw_samba_share_name }}]
   comment = {{ openclaw_samba_share_comment }}
   path = {{ openclaw_samba_share_path }}
   browseable = yes
   writable = yes
   valid users = {{ openclaw_user }}
   create mask = 0640
   directory mask = 0750
   force user = {{ openclaw_user }}
