{
  "name": "OpenClaw Ansible Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "ansible-control",
  "workspaceFolder": "/workspaces/openclaw-vps-setup",

  // Disable TTY to prevent ConPTY issues on Windows Insiders
  "containerEnv": {
    "TERM": "dumb"
  },

  // Comment out to connect as root instead
  "remoteUser": "vscode",

  // Environment variables
  "remoteEnv": {
    "TERM": "dumb",
    "PRE_COMMIT_HOME": "/workspaces/openclaw-vps-setup/.cache/pre-commit"
    // "OP_SERVICE_ACCOUNT_TOKEN": "${localEnv:OP_SERVICE_ACCOUNT_TOKEN}"
  },

  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "redhat.vscode-yaml",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "esbenp.prettier-vscode",
        "GitHub.copilot-chat",
        "github.vscode-github-actions"
      ],
      "settings": {
        "ansible.python.interpreterPath": "/usr/bin/python3",
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.yml": "ansible",
          "*.yaml": "ansible"
        },
        "yaml.schemas": {
          "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": [
            "playbooks/*.yml",
            "playbooks/*.yaml",
            "roles/*/tasks/*.yml",
            "roles/*/tasks/*.yaml"
          ]
        }
      }
    }
  },

  // Run commands after container creation
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Forward ports for testing
  "forwardPorts": [
    18789 // OpenClaw Gateway
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "portsAttributes": {
    "18789": {
      "label": "OpenClaw Gateway",
      "onAutoForward": "notify"
    }
  },

  // Comment out to connect as root instead
  "remoteUser": "vscode",

  // Keep container running for better performance
  "runServices": ["ansible-control", "ubuntu-target"],

  // Mount the Docker socket, local cache directories, and host SSH keys
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localWorkspaceFolder}/.cache/pre-commit,target=/workspaces/openclaw-vps-setup/.cache/pre-commit,type=bind,consistency=cached",
    "source=${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh-host,type=bind,consistency=cached,readonly"
  ]
}
